<%- include ("partials/header") -%>


<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input name="newTitle" type="text" class="form-control" id="exampleInputEmail1" autofocus autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Post</label> 
        <textarea name="newPost" type="password" class="form-control" rows="6" id="exampleInputPassword1" autofocus autocomplete="off"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer") -%>